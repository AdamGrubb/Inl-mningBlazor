<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Free</th>
            <th scope="col">Director</th>
            <th scope="col">Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
            @foreach (FilmDTO dto in Model)
            {
             <tr>
                <td>@dto.Title</td>
                <td>@(dto.Free ? "Free": "")</td>
                <td>@dto.DirectorName</td>
                <td>@dto.Description.Truncate(50)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Edit, dto.Id)))" class="btn btn-warning">Edit</button>
                        <button type="button" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Delete, dto.Id)))" class="btn btn-danger">Delete</button>
                    </div>
                </td>
               
            </tr>
            }
        

    </tbody>
</table>


@code {
    [Parameter] public List<FilmDTO> Model { get; set; } = new();
    [Parameter] public EventCallback<ClickModel> OnClick { get; set; }
}
